# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=todo_db
DATABASE_URL=postgresql+psycopg2://postgres:your_secure_password_here@db:5432/todo_db

# Database Connection Pool
DB_ECHO=true
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Application Configuration
APP_NAME=To-Do Application
APP_VERSION=1.0.0
DEBUG_MODE=true

# API Configuration
API_PREFIX=
API_TITLE=Todo Lists API
API_DESCRIPTION=API for managing todo lists and tasks

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Slug Configuration
SLUG_MAX_LENGTH=100
SLUG_SEPARATOR=-

# Task Weight Configuration
DEFAULT_TASK_WEIGHT=1000.0
WEIGHT_INCREMENT=1000.0

# Ports
NGINX_PORT=80
